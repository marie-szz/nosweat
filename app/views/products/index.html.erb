<%= render "shared/navbar" %>

<div class="container container-down">
  <div class="justify-content-end mb-5" >
    <%= form_tag products_path, method: :get do %>
    <div class="d-flex my-5" style="height: 50px; width: 1200px;">
      <select name="size" class="form-control">
        <option value="" disabled selected hidden>Etat</option>
        <option value="Moyen">Moyen</option>
        <option value="Bon">Bon</option>
        <option value="Excellent">Excellent</option>
      </select>
      <select name="size" class="form-control">
        <option value="" disabled selected hidden>Taille</option>
        <option value="M">M</option>
        <option value="S">S</option>
        <option value="L">L</option>
        <option value="XS">XS</option>
      </select>
      <%= form_tag products_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Adresse"
          %>
      <% end %>

        <%= submit_tag "Rechercher", class: "btn btn-primary" %>
      <% end %>

        <% if policy(Product).create? %>
          <%= link_to "Ajouter un produit", new_product_path, class: "btn btn-primary" %>
        <% end %>

  </div>

  <div class="cards">
    <% @products.each do |product| %>
      <%= link_to product_path(product) do  %>
        <div class="card-product">
          <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" /> %>
          <%= cl_image_tag(product.photos.first.key, class: "image") %>
          <div class="card-product-infos">
          <% if product.user.photo_url %>
            <%= image_tag asset_path(product.user.photo_url) %>
          <% end %>
            <h2><%= product.name %></h2>
            <p><%= product.description %></p>
            <h2 class="price"><%= product.price %> â‚¬</h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
