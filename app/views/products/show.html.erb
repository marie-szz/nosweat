<%= render "shared/navbar" %>
<div class="container container-down">

   <div class="card-product-show d-flex" style="mb-5;">
    <%= cl_image_tag(@product.photos.first.key,
                    width: 567, height: 567, crop: :fill,
                    class: "image") %>
    <div class="card-product-show-mini">
      <% @product.photos.each do |photo| %>
        <% if @product.photos.index(photo) != 0 %>
          <%= cl_image_tag(photo.key,
          width: 280, height: 280, crop: :fill) %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="container">
    <div class="card-product-info-schedule">
      <div class="d-flex" style="justify-content: space-between; my-5">
        <div class="card-product-info">
          <h4><%= @product.name %></h4>
          <br>
          <h5><%= @product.description %></h5>
          <br>
          <h6><%= @product.price %>€ par jour</h6>
          <h6><%= @product.quality %> état</h6>
        </div>
        <div class="mx-5" style="width: 460px">
          <%= simple_form_for [ @product, @booking ] do |f| %>
            <%= f.input :check_in %>
            <%= f.input :check_out %>
            <%= f.submit "Check availability", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Vérifier la disponibilité
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
