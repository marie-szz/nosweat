<%= render "shared/navbar" %>
<div class="container container-down">
  <h1>Products#show</h1>
  <p>Find me in app/views/products/show.html.erb</p>

  <%= @product.name %>
  <% @product.photos.each do |photo| %>
    <%= cl_image_tag(photo.key,
    width: 400, height: 300, crop: :fill) %>
  <% end %>
  <% if @bookings.empty? %>
    <div class="container" style="width: 460px;">
      <%= simple_form_for [ @product, @booking ] do |f| %>
        <%= f.input :check_in %>
        <%= f.input :check_out %>
        <%= f.submit "Réserver", class: "btn btn-primary" %>
      <% end %>
    </div>
  <% else %>
    <p>Votre réservation a bien été prise en compte !</p>
  <% end %>
</div>

