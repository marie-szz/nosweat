<%= simple_form_for(@product) do |f| %>
  <%= f.input :sport_category %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :location %>
  <%= f.input :quality %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :delivery %>
  <%= f.submit "Add a product", class: "btn btn-primary" %>
<% end %>
